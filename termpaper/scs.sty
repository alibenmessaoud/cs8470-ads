%
% \section commands
%
\makeatletter
\renewcommand{\@makecaption}[2]{{\textbf{#1.}\hskip1.5ex #2}}
\renewcommand\section{\@startsection{section}{1}{0pt}%
    {-3.5ex \@plus -1ex \@minus -.2ex}%
    {1pt}%
    {\fontsize{12}{12pt}\bf\MakeUppercase}}
\renewcommand\subsection{\@startsection{subsection}{2}{0pt}%
    {-3.25ex\@plus -1ex \@minus -.2ex}%
    {1pt}%
    {\fontsize{12}{12pt}\bf}}
\renewcommand\subsubsection{\@startsection{subsubsection}{2}{\parindent}%
    {-3.25ex\@plus -1ex \@minus -.2ex}%
    {1pt}%
    {\bf}}
\makeatother
%
% \maketitle command
%
\makeatletter
\def\maketitle{%
  \twocolumn[%
    	\begin{@twocolumnfalse}%
		\begin{center}%
		{\Large\bf 	\@title\par}\vspace*{10pt}%
		{\normalsize\bf \@author\par}%
		\end{center}%
	\end{@twocolumnfalse}%
  \vspace*{8pt}%
  ]%
  %\vfill%
  %\null%
}
\makeatother

